#!/usr/bin/env ruby

require 'chore'
require 'chore/server'
require 'chore/constants'

EventMachine::run do
  EventMachine::open_datagram_socket('0.0.0.0', Chore::Constants::DEFAULT_LISTEN_PORT, ChoreCollect)
  EventMachine::start_server('0.0.0.0', Chore::Constants::DEFAULT_CLI_PORT, ChoreDisplay)
  EventMachine::start_server('0.0.0.0', Chore::Constants::DEFAULT_WEB_PORT, ChoreWeb)
end
